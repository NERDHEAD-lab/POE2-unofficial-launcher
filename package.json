{
  "name": "poe2-unofficial-launcher",
  "private": true,
  "version": "0.0.1",
  "description": "Unofficial Launcher for Path of Exile 2 (Kakao)",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:test": "cross-env VITE_SHOW_GAME_WINDOW=true vite",
    "build": "tsc && vite build && electron-builder",
    "package": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.33",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
