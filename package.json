{
  "name": "poe2-unofficial-launcher",
  "private": true,
  "version": "0.9.1",
  "description": "Unofficial Launcher for Path of Exile & Path of Exile 2",
  "author": "NERDHEAD LAB",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/NERDHEAD-lab/POE2-unofficial-launcher.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "setup": "node -e \"if(!require('fs').existsSync('node_modules')) { require('child_process').execSync('npm install', {stdio: 'inherit'}) }\"",
    "dev": "chcp 65001 && vite",
    "dev:test": "chcp 65001 && cross-env VITE_SHOW_GAME_WINDOW=true vite",
    "build": "tsc && vite build && electron-builder",
    "build:check": "tsc && vite build",
    "package": "electron-builder",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "axios": "^1.13.4",
    "dompurify": "^3.3.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.1.7",
    "github-markdown-css": "^5.9.0",
    "jszip": "^3.10.1",
    "marked": "^17.0.1",
    "node-html-parser": "^7.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.33",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.17",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.0.0",
    "husky": "^9.0.11",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
