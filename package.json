{
  "name": "poe2-unofficial-launcher",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Unofficial Launcher for Path of Exile & Path of Exile 2",
  "author": "NERDHEAD LAB",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/NERDHEAD-lab/POE2-unofficial-launcher.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "setup": "node -e \"if(!require('fs').existsSync('node_modules')) { require('child_process').execSync('npm install', {stdio: 'inherit'}) }\"",
    "dev": "chcp 65001 && vite",
    "dev:test": "chcp 65001 && cross-env VITE_SHOW_GAME_WINDOW=true vite",
    "build": "tsc && vite build && electron-builder",
    "package": "electron-builder",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.33",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
