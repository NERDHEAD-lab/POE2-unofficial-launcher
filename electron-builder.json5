{
  appId: "com.nerdhead.poe2-launcher",
  productName: "POE2 Unofficial Launcher",
  directories: {
    output: "dist",
  },
  files: ["dist-electron/**/*", "dist/**/*"],
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    createDesktopShortcut: true,
    createStartMenuShortcut: true,
    shortcutName: "POE2 Unofficial Launcher",
    include: "build/installer.nsh",
  },
  win: {
    icon: "build/icon.ico",
    target: "nsis",
  },
  publish: {
    provider: "github",
    owner: "NERDHEAD-lab",
    repo: "POE2-unofficial-launcher",
    releaseType: "release",
  },
}
